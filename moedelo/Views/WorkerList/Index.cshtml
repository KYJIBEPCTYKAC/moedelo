@using moedelo.SharedClasses;
@{
    ViewBag.Title = "Список сотрудников";
    ViewBag.msg = Messages.getMessages();

}
@section Scripts{
    <script type="text/javascript" src="~/js/users.js" defer></script>
    <link rel="stylesheet" href="~/css/user.css" />
    <script type="text/javascript">
        var msgEdit = "@ViewBag.msg.msgEdit";
        var msgDelete = "@ViewBag.msg.msgDelete";
    </script>
}
<button id="create-user" class="userbutton">@ViewBag.msg.msgAdd</button>
<button id="refresh-user" class="userbutton">@ViewBag.msg.msgRefresh</button>

<div id="dialog-form" title="Карточка сотрудника">
  <p class="validateTips">Пожалуйста, заполните все поля.</p>
  <form>
    <fieldset>
        <div class="frmfield">
            <label for="name">@ViewBag.msg.msgName</label>
            <input type="text" name="name" id="name" value="" class="text ui-widget-content ui-corner-all field">
        </div>
      <br>
        <div class="frmfield">
            <label for="email">@ViewBag.msg.msgEmail</label>
            <input type="text" name="email" id="email" value="" class="text ui-widget-content ui-corner-all field">
        </div>
      <br>
        <div class="frmfield">
            <label for="salary">@ViewBag.msg.msgSalary</label>
            <input name="salary" id="salary" class="text ui-widget-content ui-corner-all field">
        </div>
      <br>
 
      <input type="submit" tabindex="-1" style="position:absolute; top:-1000px">
    </fieldset>
  </form>
</div>
 
<div id="dialog-confirm" title="Удаление записи" style="display: none;">
  <p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Вы уверены, что хотите удалить запись?</p>
</div>
 
<div id="users-contain" class="ui-widget">
  <table id="users" class="ui-widget ui-widget-content" style="width: 100%;">
    <thead>
      <tr class="ui-widget-header ">
        <th style="width=20%;">@ViewBag.msg.msgName</th>
        <th>@ViewBag.msg.msgEmail</th>
        <th>@ViewBag.msg.msgSalary</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
